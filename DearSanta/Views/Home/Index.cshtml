@model HomeViewModel

<h2>@Model.Title</h2>

@foreach (var gift in Model.Gifts)
{
<div class="col-sm-4 col-lg-4 col-md-4">
    <div class="thumbnail">
        <img src="@gift.ThumbnailUrl" alt="Thumbnail">
        <div class="caption">
            <h3 class="pull-right">@gift.Price.ToString("c")</h3>
            <h3>
                <a asp-controller="Home" asp-action="Details"
                    asp-route-id="@gift.Id">@gift.Name</a>
            </h3>
            <p>@gift.ShortDesc</p>
        </div>
    </div>
</div>
}